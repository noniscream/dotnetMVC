            var data = $("#Login").serialize();
            $.ajax({
                type: "post",
                data: data,
                url: "../User/LoginAuth",
                success: function (result) {
                    if (result == 1) {
                        toastr.success('เข้าสู่ระบบสำเร็จ', 'สำเร็จ', { timeOut: 3000, "closeButton": true });
