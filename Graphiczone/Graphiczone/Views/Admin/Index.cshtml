
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <style>
        .display-4{
            font-weight:bold;
        }
        .card-body-icon{
            position:absolute;
            z-index:0;
            top:25px;
            right:4px;
            opacity:0.4;
            font-size:90px;
        }
        .card {
            box-shadow: 1px 3px 5px 0px rgba(0,0,0,0.75);
        }
        .shadow-sm{
            box-shadow: 0 0 1.25rem rgba(11, 37, 75, .05);
        }
        .icon-circle{
            width:60px;
            height:60px;
        }
        .icon-bg-primary{
            background-color:rgba(0, 123, 255, .1)!important;
        }
        .icon-bg-warning {
            background-color: rgba(255, 136, 0, .1) !important;
        }
        .icon-bg-success{
            background-color:rgba(0, 126, 51, .1)!important;
        }
        .icon-bg-danger {
            background-color: rgba(204,0,0,.1)!important;
        }
        .icon-bg-info{
            background-color:rgba(0,153,204,.1)!important;
        }
        .admin-card{
            border-radius:10px;
        }
    </style>

    <div id="PlaceHolderHere"></div>

    <div class="container">
        <div class="row" style="margin-top:3%">
            <div class="col-md-3">
                <div class="card admin-card totalorder-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-success rounded-circle d-flex align-self-center mr-3">
                                <i class="fas fa-cart-arrow-down text-success align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <label>รายการสั่งทำทั้งหมด</label>
                            <p align="right"><label class="badge icon-bg-success badge-pill" style="font-size:1rem;">@ViewBag.totalorder รายการ</label></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card admin-card totalworking-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-danger rounded-circle d-flex align-self-center mr-3">
                                <i class="fas fa-hammer text-danger align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <label>สื่อสิ่งพิมพ์ที่ผลิตอยู่</label>
                            <p align="right"><label class="badge icon-bg-danger badge-pill" style="font-size:1rem;">@ViewBag.totalworking รายการ</label></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card admin-card totalworkdone-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-primary rounded-circle d-flex align-self-center mr-3">
                                <i class="fas fa-clipboard-check text-primary align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <label>สื่อสิ่งพิมพ์ที่ผลิตเสร็จแล้ว</label>
                            <p align="right"><label class="badge icon-bg-primary badge-pill" style="font-size:1rem;">@ViewBag.totalworkdone รายการ</label></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card admin-card totalshipping-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-warning rounded-circle d-flex align-self-center mr-3">
                                <i class="fas fa-shipping-fast text-warning align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <label>สื่อสิ่งพิมพ์ที่ส่งมอบแล้ว</label>
                            <p align="right"><label class="badge icon-bg-warning badge-pill" style="font-size:1rem;">@ViewBag.totalshipping รายการ</label></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="bg-light" />
        <div class="row">
            <div class="col-md-4">
                <div class="card admin-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-info rounded-circle d-flex align-self-center mr-3 mt-3">
                                <i class="fas fa-chart-line text-info align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>รายได้ทั้งหมด : @ViewBag.totalorder รายการ</label>
                                </div>
                            </div>
                            <hr class="bg-info" />
                            <div class="row">
                                <div class="col-md-12" align="right">
                                    <label>เป็นเงิน : @ViewBag.totalincome.ToString("#,###.00") บาท</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card admin-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-success rounded-circle d-flex align-self-center mr-3 mt-3">
                                <i class="fas fa-dollar-sign text-primary align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>รายการที่ชำระเงินแล้ว : @ViewBag.countpayment รายการ</label>
                                </div>
                            </div>
                            <hr class="bg-success" />
                            <div class="row">
                                <div class="col-md-12" align="right">
                                    <label>เป็นเงิน : @ViewBag.totalpayment.ToString("#,###.00") บาท</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card admin-card border-0 shadow-sm shadow-hover">
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-danger rounded-circle d-flex align-self-center mr-3 mt-3">
                                <i class="fab fa-creative-commons-nc text-warning align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>รายการที่ค้างชำระ : @ViewBag.countcredit รายการ</label>
                                </div>
                            </div>
                            <hr class="bg-danger" />
                            <div class="row">
                                <div class="col-md-12" align="right">
                                    <label>เป็นเงิน : @ViewBag.totalcredit.ToString("#,###.00") บาท</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="bg-light" />
        <div class="row">
            <div class="col-md-8">
                <div class="card admin-card border-0 shadow-sm shadow-hover">
                    <label class="card-header admin-card bg-white">
                        <i class="fas fa-history"></i> รายการสั่งทำล่าสุด
                        <span align="right"><p align="right" class="badge icon-bg-primary badge-pill"> @ViewBag.countOrLatest รายการ</p></span>
                    </label>

                    <div class="card-body d-flex">
                        <table class="table table-striped">
                            <thead class="bg-dark text-white">
                                <tr>
                                    <th>รหัสสั่งทำ</th>
                                    <th>สั่งวันที่</th>
                                    <th>กำหนดส่งวันที่</th>
                                    <th>ชื่อผู้สั่ง</th>
                                </tr>
                            </thead>
                            <tbody id="tableOrlastest">
                                @if (ViewBag.listOrLatest != null)
                                {
                                    @foreach (var x in ViewBag.listOrLatest)
                                    {
                                        <tr>
                                            <td>@x.OrPrintId</td>
                                            <td>@x.OrPrintDate.ToString("dd MMMyyyy")</td>
                                            @if (x.OrPrintDue != null)
                                                {
                                                    <td>@x.OrPrintDue.ToString("dd MMM yyyy")</td>
                                                }
                                                else
                                                {
                                                    <td>อยู่ระหว่างประเมินระยะเวลาส่งมอบ</td>
                                                }
                                            @foreach (var i in ViewBag.listCustomer)
                                            {
                                                @if (x.CusId == i.CusId)
                                                {
                                                    <td>@i.CusFirstname</td>
                                                }
                                            }
                                        </tr>
                                    }
                                }
                                @if (ViewBag.countOrLatest == 0)
                                {
                                    <tr>
                                        <td colspan="4" align="center"><b>ไม่พบข้อมูลรายการสั่งล่าสุด</b></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card admin-card border-0 shadow-sm shadow-hover" onclick="aa()">
                    <label class="card-header admin-card bg-white">
                        <i class="fas fa-coins"></i> ค่าใช้จ่ายให้กับพนักงาน
                    </label>
                    <div class="card-body d-flex">
                        <div>
                            <div class="icon-circle icon-bg-primary rounded-circle d-flex align-self-center mr-3 mt-3">
                                <i class="fas fa-user-alt text-primary align-self-center mx-auto lead"></i>
                            </div>
                        </div>
                        <div class="">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>พนักงานทั้งหมด : @ViewBag.countemployee คน</label>
                                </div>
                            </div>
                            <hr class="bg-info" />
                            <div class="row">
                                <div class="col-md-12" align="right">
                                    <label>เป็นเงิน : @ViewBag.totalemployee.ToString("#,###.00") บาท/เดือน</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

    </script>