@model IEnumerable<Graphiczone.Models.SQLServer.TypePrint>
@{
    ViewData["Title"] = "ReportService";
    Layout = "~/Views/Shared/_formatReport.cshtml";
}

<h4 style="top:0;" align="center">รายงานบริการ</h4>

<table class="table table-striped" style="margin-top:2px">

    <thead class="thead-secondary">
        <tr align="center">
            <th>ประเภทบริการ</th>
            <th>ชื่อบริการ</th>
            <th>ราคาต่อ 1 ตร.ม (บาท)</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tbody align="left" style="margin-top:1rem;">
            <tr>
                <td colspan="4" align="left">@x.TypePrintName</td>
                @foreach (var p in ViewBag.listprint)
                {
                    @if (p.TypePrintId == x.TypePrintId)
                    {
                    <tr>
                        <td></td>
                        <td align="left">@p.PrintName (@p.PrintUnit)</td>
                        <td align="right">@p.PrintPrice.ToString("#,###.00")</td>
                    </tr>
                }
                }
            </tr>
            </tbody>
        }
</table>